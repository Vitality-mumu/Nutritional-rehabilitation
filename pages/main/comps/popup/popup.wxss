.popup {
    z-index: 2;
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background: rgba(173, 173, 173, 0.6);
}

.dialog {
    box-sizing: border-box;
    padding: 70rpx 80rpx 70rpx 80rpx;
    width: 696rpx;
    /* height: 546rpx; */
    margin-top: 340rpx;
    background-image: url('https://bayajk.com/assets/img/y-dialog.png');
    background-size: cover;
    z-index: 3;
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.dialog-txt{
    font-size: 10px;
    color: #FF275B;
    width: 536rpx;
    padding: 0rpx 34rpx;
    box-sizing: border-box;
}
.error {
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    width: 54rpx;
    height: 54rpx;

}

.input-view {
    padding: 32rpx 34rpx;
    box-sizing: border-box;
    width: 536rpx;
    height: 92rpx;
    background: #FBF5FF;
    margin-top: 32rpx;
    font-size: 15px;
    display: flex;
    align-items: center;

}
input{
    margin-left: 5rpx;
    flex: 1;
    height: 100%;
}

.btn {
    background: #A279D7;
    width: 200rpx;
    height: 76rpx;
    border-radius: 50rpx;
    margin-top: 58rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 17px;
}

.txtimg {
    width: 84rpx;
    height: 58rpx;
}