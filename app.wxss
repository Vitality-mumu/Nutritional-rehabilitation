.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 


::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}

/* 划线 */
.border-bottom {
  position: relative;
}
.border-bottom::after {
  position: absolute;
  content: "";
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(0.2);
  background-color: #bfa07c;
}
.border-bottom::after {
  bottom: 0;
}
.border-right {
  position: relative;
}
.border-right::before {
  position: absolute;
  content: "";
  top: 0;
  bottom: 0;
  width: 1px;
  transform: scaleX(0.2);
  background-color: #bfa07c;
}
.border-right::before {
  right: 0;
}
.border-top {
  position: relative;
}
.border-top::before {
  position: absolute;
  content: "";
  left: 0;
  right: 0;
  height: 1px;
  transform: scaleY(0.2);
  background-color: #bfa07c;
}
.border-bottom::before {
  top: 0;
}
.border-left {
  position: relative;
}
.border-left::after {
  position: absolute;
  content: "";
  top: 0;
  bottom: 0;
  width: 1px;
  transform: scaleX(0.2);
  background-color: #bfa07c;
}
.border-left::after {
  left: 0;
}

